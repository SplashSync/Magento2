{
    "name":                 "splash/magento2",
    "description":          "Splash Module for Magento 2",
    "type":                 "magento2-module",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,

    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "SplashSync\\Magento2\\Controller\\":   "Controller",
            "SplashSync\\Magento2\\Observer\\":     "Observer",
            "SplashSync\\Magento2\\Block\\":        "Block",
            "Splash\\Local\\":                      "src"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },

    "require": {
        "php":                                  "^7.2",
        "splash/phpcore":                       "dev-master"
    },

    "require-dev": {
        "magento/product-community-edition":    "^2.4.0",
        "badpixxel/php-sdk":                    "dev-main"
    },

    "autoload-dev": {
        "psr-4": {
            "Splash\\Tests\\":  "/tests/"
        },
        "files":    [
            "vendor/splash/phpcore/inc/defines.inc.php",
            "vendor/splash/phpcore/inc/Splash.Inc.php"
        ]
    },

    "scripts": {
        "auto-scripts": [
            "rm -Rf ./app ./bin ./dev ./lib ./generated ./phpserver ./pub ./setup ./var",
            "rm -Rf ./COPYING.txt./*.sample"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },

    "repositories": {
        "magento": {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    }
}
